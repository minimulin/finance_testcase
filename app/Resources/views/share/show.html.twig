{% extends '::base.html.twig' %}
{% trans_default_domain "app" %}

{% block body -%}
    <h1>{{ 'share'|trans }}</h1>

    <table class="record_properties">
        <tbody>
            <tr class="row">
                <th class="col-md-2">Id</th>
                <td class="col-md-3">{{ entity.id }}</td>
            </tr>
            <tr class="row">
                <th class="col-md-2">{{ 'name'|trans }}</th>
                <td class="col-md-3">{{ entity.name }}</td>
            </tr>
            <tr class="row">
                <th class="col-md-2">{{ 'code'|trans }}</th>
                <td class="col-md-3">{{ entity.code }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a class="btn btn-default" href="{{ path('share') }}">
            {{ 'list.back'|trans }}
        </a>
    </li>
    <li>
        <a class="btn btn-default" href="{{ path('share_edit', { 'id': entity.id }) }}">
            {{ 'edit'|trans }}
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
