{% extends '::base.html.twig' %}

{% block body -%}
    <h1>{{ 'portfolio.edit'|trans }} #{{ entity.id }}</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}

        <input type="submit" value="{{ 'update'|trans }}" class="btn btn-default" />
    {{ form_end(edit_form) }}

    <ul class="record_actions">
        <li>
            <a class="btn btn-default" href="{{ path('portfolio') }}">
                {{ 'list.back'|trans }}
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script type="text/javascript">
		$(document).ready(function() {
			$("select").chosen({width: "30%"});
		});
	</script>
{% endblock %}
