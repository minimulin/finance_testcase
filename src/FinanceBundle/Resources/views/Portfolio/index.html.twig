{% extends 'FinanceBundle::base.html.twig' %}

{% block body -%}

    <h1>Portfolio list</h1>
    <a class="btn btn-default pull-right" href="{{ path('portfolio_new') }}">Create a new entry</a>

    <table class="records_list">
        <thead>
            <tr class="row">
                <th class="col-md-1">Id</th>
                <th class="col-md-4">Shares</th>
                <th class="col-md-4">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="row">
                <td class="col-md-1"><a href="{{ path('portfolio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td class="col-md-4">{% for share in entity.shares %} {{ share.name }} {% endfor %}</td>
                <td class="col-md-4">
                    <ul class="list-actions">
                        <li>
                            <a href="{{ path('portfolio_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>show</a>
                        </li>
                        <li>
                            <a href="{{ path('portfolio_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </ul>
    {% endblock %}
