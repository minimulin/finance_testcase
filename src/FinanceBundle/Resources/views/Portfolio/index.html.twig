{% extends 'FinanceBundle::base.html.twig' %}

{% trans_default_domain "app" %}

{% block body -%}

    <h1>{{ 'Portfolio list'|trans }}</h1>
    <a class="btn btn-default pull-right" href="{{ path('portfolio_new') }}">{{ 'Create a new entry'|trans }}</a>

    <table class="records_list">
        <thead>
            <tr class="row">
                <th class="col-md-1">Id</th>
                <th class="col-md-4">{{ 'Shares'|trans }}</th>
                <th class="col-md-4">{{ 'Actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr class="row">
                <td class="col-md-1"><a href="{{ path('portfolio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td class="col-md-4">{% for share in entity.shares %} {{ share.name }} {% endfor %}</td>
                <td class="col-md-4">
                    <ul class="list-actions">
                        <li>
                            <a href="{{ path('portfolio_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>&nbsp;{{ 'Show'|trans }}</a>
                        </li>
                        <li>
                            <a href="{{ path('portfolio_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>&nbsp;{{ 'Edit'|trans }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </ul>
    {% endblock %}
