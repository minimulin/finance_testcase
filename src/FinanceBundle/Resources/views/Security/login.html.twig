{% extends 'FinanceBundle::base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form class="form-signin" action="{{ path('login_check') }}" method="post">
        <h2 class="form-signin-heading">Авторизация</h2>
        <label for="username" class="sr-only">Имя пользователя</label>
        <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="Имя пользователя" required autofocus>

        <label for="password" class="sr-only">Пароль</label>
        <input type="password" id="password" name="_password" class="form-control" placeholder="Пароль" required>

        <div class="checkbox">
            <label>
                <input type="checkbox" value="remember-me"> Запомнить меня
            </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Отправить</button>
    </form>
{% endblock %}
